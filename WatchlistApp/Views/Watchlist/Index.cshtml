@model List<WatchlistApp.ViewModels.WatchlistItemViewModel>

<h2>Мой список для просмотра</h2>

@if (TempData["Message"] != null)
{
        <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Жанр</th>
            <th>Тип</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Genre</td>
                    <td>@item.Type</td>
                    <td>
                        <a asp-action="Remove" asp-route-title="@item.Title" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Добавить</a>
